    <body class="fondo"> 


<%- include('./partials/header') %>

        <form action="/products/create" method="POST" enctype="multipart/form-data" class="formulario edicion">
            <h1>Creación productos<br><br></h1>
            
            
             <div class="contenedor">  

                    <div class="input-contenedor-name">
                    <input type="text" id="name" name="name" placeholder="Nombre del producto" class="form-control <%= locals.errors && errors.name ? 'is-invalid' : null %>" value="<%= locals.oldData ? oldData.name : null %>">
                    <div id="nameE" hidden>texto</div>    
                    <% if (locals.errors && errors.name) { %>
                            <div class="text-danger">
                                <%= errors.name.msg %>    
                            </div>
                        <% } %>
                     </div>

                     <div class="input-contenedor-id">
                        <input type="text" id="id" name="id" placeholder="ID de Producto" class="form-control <%= locals.errors && errors.id? 'is-invalid' : null %>" value="<%= locals.oldData ? oldData.id : null %>">
                        <div id="idE" hidden>texto</div>
                        <% if (locals.errors && errors.id) { %>
                            <div class="text-danger">
                                <%= errors.id.msg %>    
                            </div>
                        <% } %>
                    </div>


                    <div class="input-contenedor-category">
                    
                    <label for="category" class="form-label">Categoria </label>
                        <input type="hidden" name="category" placeholder="Categoria" class="form-control <%= locals.errors && errors.category? 'is-invalid' : null %>" value="<%= locals.oldData ? oldData.category : null %>">
                        
                        <% if (locals.errors && errors.category) { %>
                        <div class="text-danger">
                            <%= errors.category.msg %>
                           
                        </div>
                        <% } %>
                    
                    
                    <select name="category" id="categoria">
                    <option value="">Selecciona una opción</option>
                     <option value="Accesorios">Accesorios</option>
                     <option value="E-juice">E-juice</option>
                     <option value="Pods">Pods</option>
                     <option value="CBD">CBD</option>
                     <option value="Kits">Kits</option>
                    </select>
                    <div id="catE" hidden>texto</div>
                    </div>


                    <div class="input-contenedor">

                    <input type="text" id="desc" name="description" placeholder="Descripcion" class="form-control <%= locals.errors && errors.description ? 'is-invalid' : null %>" value="<%= locals.oldData ? oldData.description : null %>">
                    <div id="descE" hidden>texto</div>
                    <% if (locals.errors && errors.description) { %>
                        <div class="text-danger">
                            <%= errors.description.msg %>    
                        </div>
                    <% } %>
                    </div>

                    <div class="input-contenedor-price">
   
                    <input type="text"id="price" name="price" placeholder="Precio" class="form-control <%= locals.errors && errors.price ? 'is-invalid' : null %>" value="<%= locals.oldData ? oldData.price : null %>">
                    <div id="priceE" hidden>texto</div>    
                    <% if (locals.errors && errors.price) { %>
                            <div class="text-danger">
                                <%= errors.price.msg %>    
                            </div>
                        <% } %>
                        </div>
                    
                    
                    <div class="input-contenedor-discount">
                        <input type="text" id="disc" name="discount" placeholder="Descuento" class="form-control <%= locals.errors && errors.discount? 'is-invalid' : null %>" value="<%= locals.oldData ? oldData.discount : null %>">
                        <div id="discE" hidden>texto</div>
                        <% if (locals.errors && errors.discount) { %>
                            <div class="text-danger">
                                <%= errors.discount.msg %>    
                            </div>
                        <% } %>
                        </div>
                    
                        <div class="input-contenedor">
                            <label for="image" class="form-label">Sube tu imagen de usuario </label>
                            <input type="file" name="image" id="file" class="form-control <%= locals.errors && errors.image ? 'is-invalid' : null %>"> </i>
                            <div id="fileE" hidden>texto</div>
                            <% if (locals.errors && errors.image) { %>
                                <div class="text-danger">
                                    <%= errors.image.msg %>
                                    
                                </div>
                            <% } %>
                        </div>   
                        <br>
                        <br>
                    <div class="input-contenedor-crear">
                    <input type="submit" value="Crear Producto">
                    </div>
            </div>  
            <br>
            <br> 
        </form>

    

            <%- include('./partials/footer') %>
            <%- include('./partials/menu') %>
    </body>
