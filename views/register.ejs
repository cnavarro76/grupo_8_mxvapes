        <script src="https://kit.fontawesome.com/7a57e2dd08.js" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
        
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/css/bootstrap.min.css" rel="stylesheet">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/js/bootstrap.bundle.min.js"></script>
  

 
        <link rel="stylesheet" href="/css/styleRegistro.css">
        <%- include('./partials/script-header') %>
                      
                      
<title>Registro MXVapes</title>
</head>
<body class="fondo">



<%- include('./partials/header') %>



        <form action="/users/register" method="POST" enctype="multipart/form-data" class="formulario edicion">
            <h1>Registrate</h1>
            <div class="contenedor">
                    <div class="input-contenedor"><label for="imagen" class="form-label">Sube tu imagen de usuario</label>
                        <input type="file" name="image" id="file" class="form-control <%= locals.errors && errors.image ? 'is-invalid' : null %>">
                        <% if (locals.errors && errors.image) { %>
                            <div class="text-danger">
                                <%= errors.image.msg %>
                            </div>
                        <% } %>
                    </div>
            
            <div class="input-contenedor">
                       
                        <input type="text" name="fullName" placeholder="Nombre Completo" class="form-control <%= locals.errors && errors.fullName ? 'is-invalid' : null %>" value="<%= locals.oldData ? oldData.fullName : null %>"> <i class="fas fa-user"></i>
                        <% if (locals.errors && errors.fullName) { %>
                            <div class="text-danger">
                                <%= errors.fullName.msg %> 
                            </div>
                        <% } %>
                    </div>


            <div class="input-contenedor">
 
                        <input type="text" name="email" placeholder="Correo Electronico" class="form-control <%= locals.errors && errors.email ? 'is-invalid' : null %>" value="<%= locals.oldData ? oldData.email : null %>"><i class="fas fa-envelope"></i>
                        <% if (locals.errors && errors.email) { %>
                            <div class="text-danger">
                                <%= errors.email.msg %>
                            </div>
                        <% } %>
                    </div>
                    
                    <div class="input-contenedor">
                       
                        <input type="text" name="user_type" placeholder="Tipo de usuario" class="form-select <%= locals.errors && errors.user_type ? 'is-invalid' : null %>"> <i class="fas fa-user"></i>
                        <% if (locals.errors && errors.user_type) { %>
                            <div class="text-danger">
                                <%= errors.user_type.msg %>
                            </div>
                        <% } %>
                    </div>

                    <div class="input-contenedor">
                        
                        <input type="password" name="password" placeholder="Contraseña" class="form-control <%= locals.errors && errors.password ? 'is-invalid' : null %>"> <i class="fas fa-key"></i>
                        <% if (locals.errors && errors.password) { %>
                            <div class="text-danger">
                                <%= errors.password.msg %>
                            </div>
                        <% } %>
                    </div>

                    <div class="input-contenedor">

                        <input type="text" name="address" placeholder="Direccion" class="form-control <%= locals.errors && errors.address ? 'is-invalid' : null %>" value="<%= locals.oldData ? oldData.address : null %>"> <i class="fas fa-map-marked-alt"></i>
                        <% if (locals.errors && errors.address) { %>
                            <div class="text-danger">
                                <%= errors.address.msg %>
                            </div>
                        <% } %>
                    </div>

                    <input class="button" type="submit" value="Registrar" />
                <p class="terminos"><input class="ck" type="checkbox">Acepto los <a class="link" href="#">Términos y condiciones de uso</a></p>
                <p>¿Ya tienes cuenta? <a class="link" href="/login">Inicia sesión</a></p>
            </div>
        </form>

      <%- include('./partials/footer') %>
      <%- include('./partials/menu') %>

    </body>
</html>