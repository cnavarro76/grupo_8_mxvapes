    <body class="fondo">



<%- include('./partials/header') %>



        <form action="/users/register" method="POST" enctype="multipart/form-data" class="formulario edicion">
            <h1>Registrate</h1>
            <div class="contenedor">
                    <div class="input-contenedor"><label for="imagen" class="form-label">Sube tu imagen de usuario</label>
                        <input type="file" name="imagenes" id="file">
                    </div>
                    <div class="input-contenedor">
                       
                        <input type="text" name="nombre" placeholder="Nombre" class="txt"> <i class="fas fa-user"></i>
                    </div>

                    <div class="input-contenedor">
                        
                        <input type="text" name="apellidos" placeholder="Apellidos" class="txt"><i class="fas fa-user"></i>
                    </div>

                    <div class="input-contenedor">
 
                        <input type="text" name="correoElectronico" placeholder="E - Mail" class="txt">  <i class="fas fa-envelope"></i>
                    </div>
                    
                    <div class="input-contenedor">
                       
                        <input type="text" name="usuario" placeholder="Usuario" class="txt"> <i class="fas fa-user"></i>
                    </div>

                    <div class="input-contenedor">
                        
                        <input type="password" name="contrasenia" placeholder="Contraseña" class="txt"> <i class="fas fa-key"></i>
                    </div>

                    <div class="input-contenedor">

                        <input type="text" name="direccion" placeholder="Direccion" class="txt"> <i class="fas fa-map-marked-alt"></i>
                    </div>

                    <input class="button" type="submit" value="Registrar" />
                <p class="terminos"><input class="ck" type="checkbox">Acepto los <a class="link" href="#">Términos y condiciones de uso</a></p>
                <p>¿Ya tienes cuenta? <a class="link" href="/login">Inicia sesión</a></p>
            </div>
        </form>

