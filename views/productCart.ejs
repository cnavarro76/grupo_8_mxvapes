                <div class="count">1</div>
                <div class="btn">-</div>
            </div>
            <div class="prices">
                <div class="amount">$3.19</div>
                <div class="save"><u>guardar</u></div>
                <div class="remove"><u>Quitar</u></div>
            </div>
